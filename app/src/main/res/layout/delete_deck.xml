<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F5F9"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/annie_use_your_telescope"
        android:text="Delete Deck"
        android:textColor="#52616B"
        android:textSize="40sp"
        android:layout_marginTop="200dp">

    </TextView>

    <EditText
        android:id="@+id/deckDelete"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="deck name to be deleted:"
        android:background="@drawable/radius"
        android:textSize="20dp"
        >
    </EditText>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    </LinearLayout>

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#C9D6DF"
        android:clickable="true"
        android:text="Delete"
        android:textAllCaps="false"
        android:textColor="#52616B"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        >

    </Button>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom" />

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom"
            android:layout_alignParentBottom="true">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/bottom_navigation"
                >
                <Button
                    android:id="@+id/menu"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:drawableRight="@drawable/ic_action_home"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_marginBottom="10dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="home"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="40dp">

                </TextView>
                <Button
                    android:id="@+id/list"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:drawableRight="@drawable/ic_action_list"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_marginLeft="130dp"
                    android:layout_marginBottom="15dp"


                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="decks"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="180dp">

                </TextView>
                <Button
                    android:id="@+id/person"
                    android:layout_height="match_parent"
                    android:layout_width="180dp"
                    android:layout_marginLeft="280dp"
                    android:drawableLeft="@drawable/ic_action_person2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_marginBottom="10dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="300dp">

                </TextView>

            </com.google.android.material.bottomnavigation.BottomNavigationView>

        </com.google.android.material.appbar.AppBarLayout>


    </RelativeLayout>



</LinearLayout>