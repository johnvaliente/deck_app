<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B1B4B4">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="175dp"
        >

        <TextView
            android:id="@+id/bHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="back card:"
            android:textSize="30dp"
            android:textAlignment="center"
            >
        </TextView>

        <TextView
            android:id="@+id/backContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="back content"
            android:textSize="40dp"
            android:textAlignment="center"


            >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/frontbtnBC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:backgroundTint="#087726"
                android:text="front"
                android:textAllCaps="false"
                android:textColor="@color/black" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom" />

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom"
            android:layout_alignParentBottom="true">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/bottom_navigation"
                >
                <Button
                    android:id="@+id/menu"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:drawableRight="@drawable/ic_action_home"
                    style="@style/Widget.AppCompat.Button.Borderless"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="home"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="40dp">

                </TextView>
                <Button
                    android:id="@+id/list"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:drawableRight="@drawable/ic_action_list"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_marginLeft="130dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="decks"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="180dp">

                </TextView>
                <Button
                    android:id="@+id/person"
                    android:layout_height="match_parent"
                    android:layout_width="180dp"
                    android:layout_marginLeft="280dp"
                    android:drawableLeft="@drawable/ic_action_person"
                    style="@style/Widget.AppCompat.Button.Borderless"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="300dp">

                </TextView>
            </com.google.android.material.bottomnavigation.BottomNavigationView>

        </com.google.android.material.appbar.AppBarLayout>


    </RelativeLayout>


</LinearLayout>